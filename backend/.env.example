# Backend Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================================
# NODE ENVIRONMENT
# ============================================================
NODE_ENV=development

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=yagnexor_user
DB_PASSWORD=your_secure_password_here
DB_NAME=yagnexor

# ============================================================
# JWT AUTHENTICATION
# ============================================================
# Generate secure secrets using: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# ============================================================
# SERVER CONFIGURATION
# ============================================================
PORT=3000

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=500

# ============================================================
# EMAIL CONFIGURATION
# ============================================================
# For development, ethereal test emails will be used automatically
# For production, configure real SMTP settings

# Email From Address
EMAIL_FROM=noreply@yagnexor.com

SMTP_HOST=smtp.gmail.com
SMTP_USER=sshafe01@gmail.com
SMTP_PASS="shdm vjjh hadr zitk"
SMTP_PORT=587

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173

